<%= fields_for(name, git_version) do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :comment %>
  <%= f.hidden_field :root_path %>
  <%= f.hidden_field :git_repository_id %>
  <%= f.hidden_field :ref %>
  <%= f.hidden_field :commit %>
  <%= f.hidden_field :main_workflow_path %>
  <%= f.hidden_field :diagram_path %>
  <%= f.hidden_field :abstract_cwl_path %>
  <% git_version.remote_sources.each_with_index do |rs, i| %>
    <%= hidden_field_tag "#{f.object_name}[remote_sources][#{i}][path]", rs[:path] %>
    <%= hidden_field_tag "#{f.object_name}[remote_sources][#{i}][url]", rs[:url] %>
  <% end %>
<% end %>
