<h1>Tree</h1>

<%= git_breadcrumbs(@parent_resource, params[:path]) %>

<ul class="pending-files">
  <% @tree.each_tree do |entry| %>
    <li><%= icon_link_to(entry[:name], 'organise', polymorphic_path([@parent_resource, :git_tree], path: [params[:path], entry[:name]].compact)) %></li>
  <% end %>
  <% @tree.each_blob do |entry| %>
    <li><%= icon_link_to(entry[:name], 'markup', polymorphic_path([@parent_resource, :git_blob], path: [params[:path], entry[:name]].compact)) %></li>
  <% end %>
</ul>
