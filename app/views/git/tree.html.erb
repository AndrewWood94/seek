<% tree = jstree_from_tree(@tree, params[:path], { state: { opened: true } }
)
%>
<h1>Repo Browser</h1>

<div class="row">
  <div class="col-sm-6">
    <div id="repo-tree" style="min-height: 300px; border-right: 1px solid #ddd"></div>
  </div>
  <div class="col-sm-6">
    <div id="repo-content" style="display: none"></div>
  </div>
</div>

<script type="text/javascript">
    $j(document).ready(function () {
        $j('#repo-tree')
            .bind('loaded.jstree', function() {})
            .jstree({
                'core': {
                    // 'check_callback': true,
                    // 'force_text': true,
                    'data' : <%= raw(tree.to_json) %>
                }
            });
    });
</script>
