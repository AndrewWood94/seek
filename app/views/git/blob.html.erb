<h1>Blob</h1>

<%= git_breadcrumbs(@parent_resource, params[:path]) %>
<div class="row">
  <div class="col-sm-6">
    <strong>Path: </strong> <%= params[:path] -%><br/>
    <strong>Size: </strong> <%= number_to_human_size @blob.size -%><br/>
    <strong>SHA: </strong> <code><%= @blob.oid %></code><br/>
  </div>
  <div class="col-sm-6 text-right">
    <%= button_link_to('Download', 'download', polymorphic_path([@parent_resource, :git_download], path: params[:path])) %>
  </div>
</div>

<hr/>

<pre>
  <%= @blob.content %>
</pre>
