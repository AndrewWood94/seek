<% assay_word=@assay.is_modelling? ? t('assays.modelling_analysis') : t('assays.assay') %>
<%= render :partial => "subscriptions/subscribe", :locals => {:object => @assay }%>
<% if logged_in_and_member? %>
    <%= button_link_to("New #{assay_word} based on this one", 'new',  new_object_based_on_existing_one_assay_path(@assay,:controller_name=>"assays")) %>
<% end %>

<%= admin_dropdown do %>
    <% if @assay.can_manage? -%>
        <li><%= icon_link_to("Manage #{assay_word}", 'manage', edit_assay_path) %></li>
    <% elsif @assay.can_edit?-%>
        <li><%= icon_link_to("Edit #{assay_word} Details", 'edit', edit_assay_path) %></li>
    <% end -%>
    <%= delete_icon(@assay,current_user) %>
<% end %>
