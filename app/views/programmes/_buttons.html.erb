<%= admin_dropdown do %>
    <% if item.can_be_edited_by?(current_user) -%>
        <li><%= image_tag_for_key('edit', edit_programme_path(item), "Edit #{t('programme')} Details", nil, "Edit #{t('programme')} Details") -%></li>

        <% if admin_logged_in? -%>
            <%= delete_icon(item,current_user) %>
            <li><%= image_tag_for_key('edit',initiate_spawn_project_programme_path(item),"Spawn an existing #{t('project')}",nil,"Spawn an existing #{t('project')}") -%></li>
        <% end -%>
    <% end -%>
<% end -%>
