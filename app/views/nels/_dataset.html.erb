<h2><%= @dataset['name'] -%> <small><%= @dataset['type'] -%></small></h2>
<em>Other metadata here</em><br/><br/>
<ul class="list-group">
  <% @dataset['subtypes'].each do |subtype| %>
      <li class="list-group-item">
        <%= form_tag(nels_register_path, method: :post) do %>
            <%= hidden_field_tag('project_id', params[:project_id]) %>
            <%= hidden_field_tag('dataset_id', params[:dataset_id]) %>
            <%= hidden_field_tag('subtype_name', subtype['name']) %>
            <%= subtype['name'] %> <span class="subtle">(<%= number_to_human_size(subtype['size']) %>)</span>
            <%= submit_tag('Register', class: 'btn btn-primary btn-sm pull-right') %>
        <% end %>
      </li>
  <% end %>
</ul>
