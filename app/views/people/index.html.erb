<h1> <font color="#456AAA"> <%= 'People' %> </font> </h1> <br>
<% if @expertise -%>
  <h2><%= "People with expertise in '"+h(@expertise)+"' ... " -%></h2>
<% end %>

<% if @tools -%>
  <h2><%= "People with experience in '"+h(@tools)+"' ... " -%></h2>
<% end %>

<% if @discipline -%>
  <h2><%= "People with the discipline '#{h(@discipline.title)}'" %></h2>
<%  end -%>

<% if @project_role -%>
  <h2><%= "People with the role '#{h(@project_role.name)}'" %></h2>
<% end -%>


<% if @people.public_methods.include?(:page_totals) %>
  <!-- only do the page links if the collection supports it -->
  <%= render :partial => "general/paginate_alphabetical", :locals => { :pages => @people.pages, :page_totals=>@people.page_totals,:current_page=>@people.page } -%>
<% end %>

<div class="list_items_container">
  <%= render :partial => "assets/resource_list_item", :collection=>@people %>
</div>

<% if @people.respond_to?(:page) && @people.page == "latest" && Person.count > Seek::Config.limit_latest%>
    <%= render :partial => "general/paginate_see_all"%>
<% end %>


