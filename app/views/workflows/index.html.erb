<h1><%= @category.nil? ? "Workflows" : "#{@category.name} Workflows" -%></h1>

<% if logged_in? and current_user.person.member?%>
    <ul class="sectionIcons">
        <li><%= image_tag_for_key "new", new_workflow_path, "Upload a #{t('workflow')}", nil, "Upload a #{t('workflow')}" %></li>
    </ul>
<% end %>

<%= render :partial => "workflow_list", :locals => { :collection => @workflows,
                                                     :authorization_for_showing_already_done=>true,
                                                     :show_category => @category.nil? } %>
