<div class="breadcrumbs">
  <a href="/">Home</a> &gt;
  <%= link_to @sweep.workflow.category.name, main_app.workflows_path(:category_id => @sweep.workflow.category) -%> &gt;
  <%= link_to @sweep.workflow.title, main_app.workflow_path(@sweep.workflow) -%> &gt;
  <%= @sweep.name -%>
</div>

<div class="contribution_title">
  <h1><%= 'Sweep: ' + @sweep.name -%></h1>
</div>

<%= render :partial => 'buttons', :locals => {:sweep => @sweep} %>
<br/>

<div class="show_basic">
  <h2 style='background-color: #CDDEEF; background-image: url("/public/images/header-bg2.png");'>Runs</h2>
  <%= render :partial => 'taverna_player/runs/table', :locals => {:runs => @runs, :polling_url => runs_sweep_path(@sweep) } %>
</div>
<br/>

<div class="show_basic" id="sweep_results_table" style="<%= 'display: none' unless @sweep.complete? -%>">
  <h2 style='background-color: #CDDEEF; background-image: url("/public/images/header-bg2.png");'>Results</h2>
  <%= render :partial => 'results_table' %>
</div>
