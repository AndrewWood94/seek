<% workflow_title = TavernaPlayer.workflow_proxy.title(@workflow) || "" %>

<div class="contribution_title">
  <h1><%= workflow_title %></h1>
</div>

<%= form_for @run, :html => {:multipart => true} do |f| %>
  <%= f.hidden_field :workflow_id %>
  <%= f.hidden_field :embedded %>
  <%= f.hidden_field :name, :value => "#{workflow_title} (embedded)" %>

  <% unless @workflow.data_input_ports.empty? %>
    <%= render :partial => 'inputs_form', :locals => {:title => "Data", :inputs => @workflow.data_input_ports, :form => f} %>
  <% end %>

  <% unless @workflow.parameter_input_ports.empty? %>
    <%= render :partial => 'inputs_form', :locals => {:title => "Parameters", :inputs => @workflow.parameter_input_ports, :form => f} %>
  <% end %>

  <div style="text-align: center;">
    <%= f.submit 'Start Run', :id => "embedded-start-button" %>
  </div>
<% end %>
