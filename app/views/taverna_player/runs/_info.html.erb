<div id="run-info" style="padding-top: 10px;">
  <%= form_for run, :url => main_app.run_path(run.id), :method => "put" do |f| -%>
    <p>
      <%= error_messages_for :run -%>
      <b>Name:</b>
      <%= f.text_field :name, :size => 80 -%>
      <%= submit_tag('Save') -%>
    </p>
  <% end %>

  <div style="float: left; width: 300px; margin-right: 50px;">
    <p>
      <b>Workflow:</b>
      <% workflow = Workflow.find(run.workflow_id) %>
      <%= link_to workflow.title, main_app.workflow_path(workflow)#, :version => run.workflow_version)),
      %>
    </p>

    <p>
      <b>Status:</b>
      <%= run.status_message %> <%= image_tag('ajax-loader.gif', :style => "vertical-align: middle") unless run.complete? %>
    </p>
  </div>

  <div style="float: left">
    <%
       create_time = run.create_time.blank? ? '' : run.create_time.strftime("%e %b %Y %H:%m:%S %Z")
       start_time = run.start_time.blank? ? '' : run.start_time.strftime("%e %b %Y %H:%m:%S %Z")
       finish_time = run.finish_time.blank? ? '' : run.finish_time.strftime("%e %b %Y %H:%m:%S %Z")
    %>

    <p>
      <b>Create time:</b>
      <%= create_time %>
    </p>

    <p>
      <b>Start time:</b>
      <%= start_time %>
    </p>

    <p>
      <b>Finish time:</b>
      <%= finish_time %>
    </p>
  </div>
</div>
