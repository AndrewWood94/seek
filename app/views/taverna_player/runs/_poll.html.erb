<%= javascript_include_tag 'jquery-1.5.1.min.js' %>
<div id="run-poll">
  <script type="text/javascript">
    var poll_interval = <%= TavernaPlayer.server_poll_interval * 2000 %>

    $j = jQuery.noConflict();

    $j(document).ready(
      function() {
        window.setTimeout("poll_run()", poll_interval)
      }
    );

    function poll_run() {
      $j.get("<%= reload %>", null, null, "script")
    }
  </script>
</div>
