<!DOCTYPE html>

<html>
  <head>
    <title>Embedded Workflow Run</title>

    <%= csrf_meta_tags %>

    <%= seek_stylesheet_tags %>
    <%= seek_javascript_tags %>

    <%= javascript_include_tag 'jquery-1.5.1.min' %>

    <script>
      $j = jQuery.noConflict();

      function verticallyAlign() {
         var divH = $j('#content').innerHeight()/2;
         var pageH = $j(window).height()/2;
         var pad = pageH - divH;
         if(pad < 10)
           pad = 10;
         $j('#content').css({paddingTop: pad});
       }

      $j(document).ready(function() {
         verticallyAlign();
      });

      $j(window).resize(function(){
        verticallyAlign();
      });
    </script>
    <style>
      body{height:100%;}
    </style>
  </head>
  <body>

  <div id="container">
    <div id="bd" style="padding-bottom: 48px">
      <div id="yui-main">
        <div id="content">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>

  <%= render :partial => "taverna_player/runs/embedded/corner_logo" -%>

  <script type="text/javascript">
      initialiseFolds();
  </script>

  </body>
</html>
