<subProcess id="study-<%= study.id %>" name="<%= study.title %>">

<% link_start = "study-#{study.id}-start" %>
<startEvent id="<%= link_start %>"/>

<% start_sentry = "study-#{study.id}-start-sentry" %>

  <%= render :partial => "bpmn/start_sentry",
      	     :locals => {:id => start_sentry,
	     	     	 :name => "#{study.title} Start Sentry",
			 :pisa_assignee => "alan.r.williams@manchester.ac.uk",
			 :pisa_type => "Study",
			 :pisa_name => "#{study.title}",
			 :pisa_description => "#{study.description}",
			 :pisa_protocol => "",
			 :pisa_url => "#{ Seek::Config.site_base_host}#{polymorphic_path(study)}" } -%>

  <sequenceFlow sourceRef="<%= link_start %>" targetRef="<%= start_sentry %>" id="<%= link_start %>-to-<%= start_sentry %>"/>

<% link_start = start_sentry %>

<% study.assays.each do |a| %>
  <%= render :partial => "bpmn/assay", :locals => { :assay => a } -%>

  <% link_end = "assay-#{a.id}" %>
  <sequenceFlow sourceRef="<%= link_start %>" targetRef="<%= link_end %>" id="<%= link_start %>-to-<%= link_end %>"/>

  <% link_start = "assay-#{a.id}" %>
<% end %>

<% link_end="study-#{study.id}-end" %>
<endEvent id="<%=link_end %>"/>

<sequenceFlow sourceRef="<%= link_start %>" targetRef="<%= link_end %>" id="<%= link_start %>-to-<%= link_end %>"/>

</subProcess>
