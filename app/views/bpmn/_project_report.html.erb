<%= render :partial => "bpmn/step_report", :locals => { :item_type => 'Project', :item => project } -%>
<% project.investigations.each do |i| %>
  <%= render :partial => "bpmn/step_report", :locals => { :item_type => 'Investigation' , :item => i } -%>
  <% i.studies.each do |s| %>
    <%= render :partial => "bpmn/step_report", :locals => { :item_type => 'Study' , :item => s } -%>
    <% s.assays.each do |a| %>
      <%= render :partial => "bpmn/step_report", :locals => { :item_type => 'Assay' , :item => a } -%>
    <% end %>
  <% end %>
<% end %>

