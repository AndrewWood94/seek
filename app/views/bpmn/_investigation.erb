<subProcess id="investigation-<%= investigation.id %>" name="<%= investigation.title %>">

<% link_start = "investigation-#{investigation.id}-start" %>
<startEvent id="<%= link_start %>"/>

<% start_sentry = "investigation-#{investigation.id}-start-sentry" %>

 <%= render :partial => "bpmn/start_sentry",
     	    :locals => {:id => start_sentry,
	    	         :name => "#{investigation.title} Start Sentry",
			 :pisa_assignee => "alan.r.williams@manchester.ac.uk",
			 :pisa_type => "Investigation",
			 :pisa_name => "#{investigation.title}",
			 :pisa_description => "#{investigation.description}",
			 :pisa_protocol => "",
			 :pisa_url => "#{ Seek::Config.site_base_host}#{polymorphic_path(investigation)}" } -%>

  <sequenceFlow sourceRef="<%= link_start %>" targetRef="<%= start_sentry %>" id="<%= link_start %>-to-<%= start_sentry %>"/>

<% link_start = start_sentry %>

<% investigation.studies.each do |s| %>
  <%= render :partial => "bpmn/study", :locals => { :study => s } -%>

  <% link_end = "study-#{s.id}" %>
  <sequenceFlow sourceRef="<%= link_start %>" targetRef="<%= link_end %>" id="<%= link_start %>-to-<%= link_end %>"/>

  <% link_start = "study-#{s.id}" %>
<% end %>

<% link_end="investigatiion-#{investigation.id}-end" %>
<endEvent id="<%=link_end %>"/>

<sequenceFlow sourceRef="<%= link_start %>" targetRef="<%= link_end %>" id="<%= link_start %>-to-<%= link_end %>"/>

</subProcess>
