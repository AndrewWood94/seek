<%= index_title -%>
<%= render :partial => "assets/new_button", :locals => {:new_object_path => new_study_path, :label => "New #{t('study')}"} %>

<% if Seek::Config.faceted_browsing_enabled && Seek::Config.facet_enable_for_pages[controller_name] && @ie_support_faceted_browsing  %>
    <%= render :partial => "assets/filter_button", :locals => {:index_path => studies_path} %>

    <% if params[:facet] == 'true' %>
        <%= render :partial => "faceted_browsing/faceted_browsing", :object => @studies %>
    <% else %>
        <%= render :partial => "assets/resources_alphabetical_paginated", :object => @studies %>
    <% end %>
<% else %>
    <%= render :partial => "assets/resources_alphabetical_paginated", :object => @studies %>
<% end %>