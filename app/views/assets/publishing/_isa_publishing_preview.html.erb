<%
   item = isa_publishing_preview

   case item
     when Investigation
       children = item.studies
     when Study
       children = item.assays
     when Assay
       children = item.assets
     else
       children = []
   end
-%>

<%= render :partial => "assets/publishing/options_for_publishing", :object => item, :locals => {:html_classes => "publishing_options"} -%>

<% if children.any? %>
    <div style="margin-left: 3em">
      <% children.each do |child| %>
          <%= render :partial => "assets/publishing/isa_publishing_preview", :object => child, :locals => {:checked=>(item==child),:html_classes => "publishing_options"} -%>
      <% end %>
    </div>
<% end %>
