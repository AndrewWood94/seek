<%
  id ||= "items"
  text ||= "your items"
  cb_parent_selector ||= 'body'
  collapse_selector ||= cb_parent_selector
  show_hide_selector ||= cb_parent_selector
  blocked_selector ||= ''

  select_deselect_all ||= false
  collapse_expand ||= false
  show_hide_blocked ||= false
  show_hide_permissions ||= false
%>

<% if select_deselect_all %>
  <div class="btn-group" style="padding-right: 15px">
    <a type="button" style="padding: 2px 6px" class="btn btn-default btn-sm selectChildren"
       id="select_all_<%= id %>" data-cb_parent_selector="<%= cb_parent_selector %>" >
      Select all <%= text %>
    </a>
    <a type="button" style="padding: 2px 6px" class="btn btn-default btn-sm deselectChildren"
       id="deselect_all_<%= id %>" data-cb_parent_selector="<%= cb_parent_selector %>" >
      Deselect all <%= text %>
    </a>
  </div>

<% end %>
<% if collapse_expand %>
  <div class="btn-group" style="padding-right: 15px">
    <a type="button" style="padding: 2px 6px" class="btn btn-default btn-sm collapseChildren"
       id="collapse_all_<%= id %>" data-cb_parent_selector="<%= collapse_selector %>" >
      Collapse all
    </a>
    <a type="button" style="padding: 2px 6px" class="btn btn-default btn-sm expandChildren"
       id="expand_all_<%= id %>" data-cb_parent_selector="<%= cb_parent_selector %>" >
      Expand all
    </a>
  </div>
<% end %>
<% if show_hide_blocked %>
  <div class="btn-group" style="padding-right: 15px">
    <a type="button" style="padding: 2px 6px" class="btn btn-default btn-sm showBlocked"
       data-cb_parent_selector="<%= show_hide_selector %>" data-blocked_selector="<%= blocked_selector %>">
      Show blocked items
    </a>
    <a type="button" style="padding: 2px 6px" class="btn btn-default btn-sm hideBlocked"
       data-cb_parent_selector="<%= show_hide_selector %>" data-blocked_selector="<%= blocked_selector %>">
      Hide blocked items
    </a>
  </div>
<% end %>
<% if show_hide_permissions %>
  <div class="btn-group" style="padding-right: 15px">
    <a type="button" style="padding: 2px 6px" class="btn btn-default btn-sm showPermissions"
       data-permissions_selector='div.permission_list' >
      Show all permissions
    </a>
    <a type="button" style="padding: 2px 6px" class="btn btn-default btn-sm hidePermissions"
       data-permissions_selector='div.permission_list' >
      Hide all permissions
    </a>
  </div>
<% end %>
