<%
   assets = asset_index
   assets_index_path = eval("#{controller_name}_path")
%>
<% unless assets.empty? %>
    <% if index_with_facets?(controller_name) %>
        <%= render :partial => "assets/filter_button", :locals => {:index_path => assets_index_path} %>

        <% if params[:user_enable_facet] == 'true' %>
            <%= render :partial => "faceted_browsing/faceted_browsing", :object => assets %>
        <% else %>
            <%= render :partial => "assets/resources_alphabetical_paginated", :object => assets %>
        <% end %>
    <% else %>
        <%= render :partial => "assets/resources_alphabetical_paginated", :object => assets %>
    <% end %>
<% else %>
    <%= no_items_to_list_text %>
<% end %>
