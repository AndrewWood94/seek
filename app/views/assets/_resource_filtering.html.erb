<% filter_limit = 6 %>
<% if @available_filters&.any? { |_, filters| filters.any? } %>
  <div class="index-filters">
    <% @available_filters.each do |key, filters| %>
      <% if filters.any? %>
        <div class="filter-category collapsed">
          <div class="filter-category-title"><%= key.to_s.humanize %></div>
          <% sorted_filters(filters).each_with_index do |filter, i| %>
            <%= filter_link(key, filter, i >= filter_limit) %>
          <% end %>
          <% if filters.length > filter_limit %>
          <%= link_to "More...", '#', class: 'expand-filter-category-link' %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
