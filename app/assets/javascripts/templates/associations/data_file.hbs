<li class="association-list-item">
    <input type="hidden" name="data_files[][id]" value="{{id}}"/>
    <input type="hidden" name="data_files[][direction]" value="{{direction.value}}"/>
    <input type="hidden" name="data_files[][relationship_type]" value="{{relationship_type.value}}"/>
    {{title}}
    {{#if relationship_type}}
        <small>({{relationship_type.text}})</small>
    {{/if}}
    <a class="remove-association clickable" title="Remove sample">&times;</a>
</li>