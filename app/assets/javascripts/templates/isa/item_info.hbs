<div class='isa-selected-item'>
    <div>
        <strong>Selected item: </strong>
        {{#if url}}
            <span>
                <a href="{{url}}" title="{{{description}}}">
                  <b>{{type}}: </b> {{{fullName}}}
                </a>
            </span>
        {{else}}
            <span class="none_text">Hidden item</span>
        {{/if}}
    </div>
</div>
