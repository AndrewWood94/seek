<% environment.context_class.instance_eval { include ImagesHelper } %>

#large_spinner {
    background: url(<%= asset_path(icon_filename_for_key('large-spinner')) %>);
    background-repeat: no-repeat;
    width: 75px; /*or your image's width*/
    height: 75px; /*or your image's height*/
    margin: 0;
    padding: 0;
    vertical-align: middle;
    display:inline-block;
}

#warning_icon {
    background: url(<%= asset_path(icon_filename_for_key('warning')) %>);
    background-repeat: no-repeat;
    width: 22px; /*or your image's width*/
    height: 22px; /*or your image's height*/
    margin: 0;
    padding: 0;
    border-width: 0px;
    vertical-align: middle;
    display:inline-block;
}

#error_icon {
    background: url(<%= asset_path(icon_filename_for_key('error')) %>);
    background-repeat: no-repeat;
    width: 22px; /*or your image's width*/
    height: 22px; /*or your image's height*/
    margin: 0;
    padding: 0;
    border-width: 0px;
    vertical-align: middle;
    display:inline-block;
}